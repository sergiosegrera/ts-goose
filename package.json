{
  "name": "@ssegrera/ts-goose",
  "version": "1.0.8",
  "description": "A lightweight database migration tool for TypeScript and Bun",
  "author": "Sergio Segrera",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sergiosegrera/ts-goose"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "bin": {
    "ts-goose": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "migration",
    "database",
    "postgres",
    "bun",
    "typescript",
    "cli"
  ],
  "devDependencies": {
    "@biomejs/biome": "2.3.1",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "scripts": {
    "ts-goose": "bun run index.ts",
    "psql": "psql -h localhost -p 5432 -U postgres -d postgres",
    "build": "bun build cli.ts index.ts --target bun --outdir dist && tsc -p tsconfig.build.json",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "prepublishOnly": "bun run build",
    "test": "bun test"
  }
}